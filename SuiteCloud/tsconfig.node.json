{    
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2020",
        "sourceMap": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "@api/*": ["./src/api/*"],
            "@utils/*": ["./src/utils/*"],
            "@config/*": ["./src/config/*"],
            "@typeshi/*": ["./node_modules/typeshi/dist/utils/*"],
            "@typeshi": ["./node_modules/typeshi/dist/index"],
            "typeshi:utils/*": ["./node_modules/typeshi/dist/utils/*"],
            "@regex/*": ["./node_modules/typeshi/dist/utils/regex/*"], 
            "@io/*": ["./node_modules/typeshi/dist/utils/io/*"], 
            "@ns/*": ["./src/utils/ns/*"]
        }
    },
    "exclude": [
        "node_modules/**/*",
        "node_modules/**/**/*",
        "node_modules/**/**/**/*", 
        "node_modules/**/**/**/**/*", 
        "src/api/endpoints/*.js"
    ]
}