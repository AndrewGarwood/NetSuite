{    
    "compilerOptions": {
        "strict": true,
        "module": "commonjs", // "amd"
        "target": "es5",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "sourceMap": false,
        "newLine": "CRLF",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        // "outDir": "./dist/FileCabinet/SuiteScripts",
        "lib": ["ES7","ES6", "DOM.Iterable", "DOM", "es5", "es2015.promise", "dom"],
        "paths": {      
            "N": ["node_modules/@hitc/netsuite-types/N"],
            "N/*": ["node_modules/@hitc/netsuite-types/N/*"]
        }
    },
    "include": [
        "src/server/AuthManager.ts", 
        "src/main.ts", 
    ],
    "exclude": ["node_modules", "src/FileCabinet/SuiteScripts/**/*.js", "src/FileCabinet/SuiteScripts/**/*.js", "src/FileCabinet/SuiteScripts/REST/*.js"]
}